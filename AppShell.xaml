<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TripMate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TripMate.Views"
    Title="TripMate"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Login">
            <ShellContent
                ContentTemplate="{DataTemplate views:LoginPage}"
                Route="Login"
                Shell.TabBarIsVisible="False" />
        </Tab>
        <Tab Title="Trips">
            <ShellContent
                ContentTemplate="{DataTemplate views:TripListPage}"
                Route="TripList" />
        </Tab>
    </TabBar>
</Shell>
