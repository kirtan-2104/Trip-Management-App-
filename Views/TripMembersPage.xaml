<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TripMate.ViewModels"
             xmlns:models="clr-namespace:TripMate.Models"
             x:Class="TripMate.Views.TripMembersPage"
             x:DataType="vm:TripMembersViewModel"
             Title="Members">

    <Grid RowDefinitions="Auto,*">
        <Label Grid.Row="0" Text="{Binding TripName}" FontSize="18" FontAttributes="Bold"
               Margin="16,12" />

        <RefreshView Grid.Row="1" IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Members}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:User">
                        <Border Style="{StaticResource CardStyle}">
                            <Label Text="{Binding Name}" FontSize="16" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No members." HorizontalOptions="Center" Margin="0,40" Opacity="0.7" />
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
