<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TripMate.ViewModels"
             x:Class="TripMate.Views.CreateTripPage"
             x:DataType="vm:CreateTripViewModel"
             Title="New Trip">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Border Style="{StaticResource InputCardStyle}">
                <VerticalStackLayout Spacing="16">
                    <Entry Placeholder="Trip Name" Text="{Binding Name}" />
                    <Entry Placeholder="Destination" Text="{Binding Destination}" />
                    <DatePicker Date="{Binding StartDate}" Title="Start Date" />
                    <DatePicker Date="{Binding EndDate}" Title="End Date" />
                </VerticalStackLayout>
            </Border>

            <Label Text="{Binding StatusMessage}" IsVisible="{Binding HasError}"
                   TextColor="Red" HorizontalOptions="Center" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                              HorizontalOptions="Center" />

            <Button Text="Create Trip" Command="{Binding SaveCommand}"
                    HorizontalOptions="Fill" Margin="16,8" />
            <Button Text="Cancel" Command="{Binding CancelCommand}"
                    BackgroundColor="Transparent" TextColor="{StaticResource Gray500}"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
