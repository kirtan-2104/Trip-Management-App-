<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TripMate.ViewModels"
             x:Class="TripMate.Views.TripListPage"
             x:DataType="vm:TripListViewModel"
             Title="My Trips">

    <Grid RowDefinitions="Auto,*" Padding="0">
        <Grid Grid.Row="0" Padding="16,8" ColumnDefinitions="*,Auto">
            <Label Grid.Column="0" Text="{Binding UserName}" FontSize="18" FontAttributes="Bold"
                   VerticalOptions="Center" />
            <Button Grid.Column="1" Text="Logout" Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent" TextColor="{StaticResource Primary}" />
        </Grid>

        <RefreshView Grid.Row="1" IsRefreshing="{Binding IsBusy}" Command="{Binding RefreshCommand}">
            <ScrollView>
                <VerticalStackLayout Padding="8">
                    <Label Text="{Binding StatusMessage}" IsVisible="{Binding HasError}"
                           TextColor="Red" Margin="16,8" />

                    <CollectionView ItemsSource="{Binding Trips}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="vm:TripListItemViewModel">
                                <Border Style="{StaticResource CardStyle}">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectTripCommand}"
                                                             CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>
                                    <Grid ColumnDefinitions="*,Auto" Padding="4">
                                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                                            <Label Text="{Binding Destination}" Opacity="0.8" FontSize="14" />
                                            <Label Text="{Binding DateRangeText}" Opacity="0.6" FontSize="12" />
                                            <Label Text="{Binding StatusText}" TextColor="{StaticResource Primary}"
                                                   FontSize="12" />
                                        </VerticalStackLayout>
                                        <Label Grid.Column="1" Text="â€º" FontSize="24" VerticalOptions="Center"
                                               Opacity="0.5" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="No trips yet. Create one!" HorizontalOptions="Center"
                                   Margin="0,40" Opacity="0.7" />
                        </CollectionView.EmptyView>
                    </CollectionView>

                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                                      HorizontalOptions="Center" Margin="0,20" />
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <Button Grid.Row="1" Text="+ New Trip" Command="{Binding CreateTripCommand}"
                VerticalOptions="End" HorizontalOptions="Center"
                Margin="0,0,0,24" WidthRequest="160" />
    </Grid>
</ContentPage>
